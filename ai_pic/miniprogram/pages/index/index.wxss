/**index.wxss**/

page {
  height: 100%;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.uploader {
  height: 100%;
  /* padding: 0 0 0 40rpx; */
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
  justify-content: space-around;
}

.uploader-text{
  width: 100%;
  line-height: 80px;
  font-size: 40rpx;
  color: #007aff;
  text-align:center;
  flex-grow: 0;
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  align-items: center;
}
.uploader-image {
  width: 100%;
  height: 360rpx;
}

.tunnel {
  padding: 0 0 0 40rpx;
}

.tunnel-text {
  position: relative;
  color: #222;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.tunnel-text:first-child {
  border-top: none;
}

.tunnel-switch {
  position: absolute;
  right: 20rpx;
  top: -2rpx;
}

.disable {
  color: #888;
}

.service {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(#007aff, #0063ce);
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
  display: flex;
  align-content: center;
  justify-content: center;
  transition: all 300ms ease;
}

.service-button {
  position: absolute;
  top: 40rpx;
}

.service:active {
  box-shadow: none;
}

.request-text {
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 36rpx;
  word-break: break-all;
}
.res-container{
  padding: 30rpx;
  position:fixed;
  width:100%;
  background:yellow;
  top:0;
  height:100%;
  box-sizing: border-box;
  background: #007AFF;
  overflow-y: scroll;
  color: #fff;
}
.res-close{
  text-decoration: underline;
  text-align: right;
}
.res-title{
  font-weight: bold;
  line-height: 50rpx;
  text-align: center;
}
.baike-container{
  margin-top: 30rpx;
}
.b-con{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  margin: 50rpx auto;
}
.btn{
  width: 40%;
  height: 100rpx;
  background: #FF2D55;
  border-radius: 10rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  letter-spacing: 10rpx;
  font-size: 40rpx;
}
.con{
  width:100%;
  flex-grow:1;
  flex-direction: column;
  display: flex;
}